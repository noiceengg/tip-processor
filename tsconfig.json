{
    "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "lib": ["es2021"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "sourceMap": true,
      "noImplicitAny": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "test"]
  }
  